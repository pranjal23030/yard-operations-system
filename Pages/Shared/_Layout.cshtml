<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exotrac YMS</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid mx-lg-4">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <img src="~/images/exotrac-logo.png" alt="Logo" style="height: 24px;" />
                    <span>Exotrac</span>
                </a>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-none d-md-block">
                        <span class="admin-dash-text">Admin Dashboard</span>
                    </div>
                }

                <div class="ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid px-lg-5 py-4">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container-fluid text-center">
            &copy; 2026 - <span class="fw-bold text-dark">Exotrac</span> Yard Management System. All Rights Reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>