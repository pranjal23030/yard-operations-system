@page
@using YardOps.Pages.Admin.Users
@model IndexModel
@{
    ViewData["Title"] = "Users";
    ViewData["PageHeader"] = "User Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
}

<!-- Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Deleted"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>
        @TempData["Deleted"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-circle-exclamation me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header -->
<div class="users-header">
    <h1 class="users-title">All Users</h1>
    <button type="button" class="btn-add-user" data-bs-toggle="modal" data-bs-target="#createUserModal">
        <i class="fa-solid fa-plus"></i>
        Add New User
    </button>
</div>

<!-- Filters -->
<form method="get" id="filterForm">
    <input type="hidden" name="PageNumber" value="1" />
    <div class="filters-row">
        <div class="search-box">
            <i class="fa-solid fa-search search-icon"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control"
                   placeholder="Search users..." onchange="this.form.submit()" />
        </div>
        <div class="filter-dropdown-wrapper">
            <select name="RoleFilter" class="filter-select" onchange="this.form.submit()">
                @foreach (var role in Model.RoleOptions)
                {
                    var isSelected = Model.RoleFilter == role.Value || (string.IsNullOrEmpty(Model.RoleFilter) && role.Value == "all");
                    <option value="@role.Value" selected="@isSelected">@role.Text</option>
                }
            </select>
        </div>
        <div class="filter-dropdown-wrapper">
            <select name="StatusFilter" class="filter-select" onchange="this.form.submit()">
                @foreach (var status in Model.StatusOptions)
                {
                    var isSelected = Model.StatusFilter == status.Value || (string.IsNullOrEmpty(Model.StatusFilter) && status.Value == "all");
                    <option value="@status.Value" selected="@isSelected">@status.Text</option>
                }
            </select>
        </div>
    </div>
</form>

<!-- Users Table -->
<div class="users-table">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Email Verified</th>
                <th>Last Login</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td><span class="user-name">@user.FullName</span></td>
                        <td><a href="mailto:@user.Email" class="user-email">@user.Email</a></td>
                        <td><span class="role-badge">@user.Role</span></td>
                        <td><span class="status-badge status-@user.Status.ToLower()">@user.Status</span></td>
                        <td>
                            @if (user.EmailConfirmed)
                            {
                                <span class="email-verified"><i class="fa-solid fa-check-circle"></i> Verified</span>
                            }
                            else
                            {
                                <span class="email-unverified"><i class="fa-solid fa-clock"></i> Pending</span>
                            }
                        </td>
                        <td>
                            <span class="last-login">
                                @(user.LastLogin.HasValue ? user.LastLogin.Value.ToLocalTime().ToString("yyyy-MM-dd hh:mm tt") : "Never")
                            </span>
                        </td>
                        <td>
                            <button class="action-btn" type="button" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end action-dropdown">
                                <li>
                                    <a class="dropdown-item action-item" href="#"
                                       data-bs-toggle="modal" data-bs-target="#viewUserModal"
                                       data-user-id="@user.Id" data-user-name="@user.FullName"
                                       data-user-initials="@user.Initials" data-user-email="@user.Email"
                                       data-user-role="@user.Role" data-user-status="@user.Status"
                                       data-user-location="@user.AssignedLocation"
                                       data-user-emailconfirmed="@user.EmailConfirmed.ToString().ToLower()"
                                       data-user-lastlogin="@(user.LastLogin.HasValue ? user.LastLogin.Value.ToLocalTime().ToString("yyyy-MM-dd hh:mm tt") : "Never")">
                                        <i class="fa-solid fa-eye me-2"></i>View
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item action-item" href="#"
                                       data-bs-toggle="modal" data-bs-target="#editUserModal"
                                       data-user-id="@user.Id" data-user-firstname="@user.FirstName"
                                       data-user-lastname="@user.LastName" data-user-email="@user.Email"
                                       data-user-role="@user.Role" data-user-status="@user.Status"
                                       data-user-location="@user.AssignedLocation">
                                        <i class="fa-solid fa-pen-to-square me-2"></i>Edit
                                    </a>
                                </li>
                                @if (!user.EmailConfirmed)
                                {
                                    <li>
                                        <form method="post" asp-page-handler="ResendConfirmation" style="margin: 0;">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <button type="submit" class="dropdown-item action-item">
                                                <i class="fa-solid fa-envelope me-2"></i>Resend Confirmation
                                            </button>
                                        </form>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item action-item-delete" href="#"
                                       data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                                       data-user-id="@user.Id" data-user-name="@user.FullName">
                                        <i class="fa-solid fa-trash me-2"></i>Delete
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-5 text-muted">
                        <i class="fa-solid fa-users fa-3x mb-3 d-block"></i>
                        No users found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="pagination-footer">
    <div class="pagination-info">
        @{
            var startItem = Model.TotalUsers == 0 ? 0 : ((Model.CurrentPage - 1) * 10) + 1;
            var endItem = Math.Min(Model.CurrentPage * 10, Model.TotalUsers);
        }
        Showing @startItem to @endItem of @Model.TotalUsers users
    </div>
    <div class="pagination-controls">
        @if (Model.CurrentPage > 1)
        {
            <a href="?PageNumber=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter" class="page-btn">
                <i class="fa-solid fa-chevron-left"></i>
            </a>
        }
        else
        {
            <button class="page-btn" disabled><i class="fa-solid fa-chevron-left"></i></button>
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <button class="page-btn active">@i</button>
            }
            else
            {
                <a href="?PageNumber=@i&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter" class="page-btn">@i</a>
            }
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="?PageNumber=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter" class="page-btn">
                <i class="fa-solid fa-chevron-right"></i>
            </a>
        }
        else
        {
            <button class="page-btn" disabled><i class="fa-solid fa-chevron-right"></i></button>
        }
    </div>
</div>

<!-- Modals (Partials) -->
<partial name="_Partials/_CreateUserModal" />
<partial name="_Partials/_EditUserModal" />
<partial name="_Partials/_ViewUserModal" />
<partial name="_Partials/_DeleteUserModal" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_Partials/_UserScripts" />
}
