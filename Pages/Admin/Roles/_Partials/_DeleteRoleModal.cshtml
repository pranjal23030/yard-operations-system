<div class="modal fade" id="deleteRoleModal" tabindex="-1" aria-labelledby="deleteRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title modal-title-custom" id="deleteRoleModalLabel">Delete Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Delete" id="deleteRoleForm">
                <input type="hidden" name="RoleId" id="deleteRoleId" />
                <div class="modal-body modal-body-custom">
                    <div class="delete-warning-icon">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                    </div>
                    <p class="delete-message">
                        Are you sure you want to delete the role <strong id="deleteRoleName"></strong>?
                    </p>
                    <p class="delete-submessage">This action cannot be undone.</p>
                    
                    <!-- Warning for roles with users (shown via JS) -->
                    <div class="delete-user-warning" id="deleteUserWarning" style="display: none;">
                        <i class="fa-solid fa-exclamation-circle me-2"></i>
                        <span>This role has <strong id="deleteUserCount"></strong> assigned user(s). Please reassign them before deleting.</span>
                    </div>
                </div>
                <div class="modal-footer modal-footer-custom">
                    <button type="button" class="btn-cancel-neutral" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn-delete-custom" id="deleteRoleBtn">Delete Role</button>
                </div>
            </form>
        </div>
    </div>
</div>