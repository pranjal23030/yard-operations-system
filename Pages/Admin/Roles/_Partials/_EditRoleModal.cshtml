@using YardOps.Pages.Admin.Roles
@model IndexModel

<div class="modal fade" id="editRoleModal" tabindex="-1" aria-labelledby="editRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title modal-title-custom" id="editRoleModalLabel">Edit Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" asp-for="EditInput.RoleId" id="editRoleId" />
                <input type="hidden" asp-for="EditInput.IsSystemRole" id="editIsSystemRole" />
                <div class="modal-body modal-body-custom">
                    @if (!ViewData.ModelState.IsValid && Model.ShowEditModal)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fa-solid fa-exclamation-circle me-2"></i>
                            <strong>Please fix the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- System Role Warning (shown via JS when applicable) -->
                    <div class="system-role-warning" id="systemRoleWarning" style="display: none;">
                        <i class="fa-solid fa-shield-halved me-2"></i>
                        <span>This is a system role. The role name cannot be changed.</span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="EditInput.Name" class="form-label-custom">Role Name</label>
                        <input asp-for="EditInput.Name" id="editRoleName" class="form-input-custom" placeholder="Enter role name" />
                        <span asp-validation-for="EditInput.Name" class="validation-error-custom"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="EditInput.Description" class="form-label-custom">Description</label>
                        <textarea asp-for="EditInput.Description" id="editRoleDescription" class="form-input-custom" rows="3" 
                                  placeholder="Describe the role's purpose and permissions"></textarea>
                        <span asp-validation-for="EditInput.Description" class="validation-error-custom"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="EditInput.Status" class="form-label-custom">Status</label>
                        <select asp-for="EditInput.Status" id="editRoleStatus" class="form-select-custom">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <span asp-validation-for="EditInput.Status" class="validation-error-custom"></span>
                    </div>
                </div>
                <div class="modal-footer modal-footer-custom">
                    <button type="button" class="btn-cancel-neutral" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn-primary-custom">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>