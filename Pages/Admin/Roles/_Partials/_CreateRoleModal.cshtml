@using YardOps.Pages.Admin.Roles
@model IndexModel

<div class="modal fade" id="createRoleModal" tabindex="-1" aria-labelledby="createRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title modal-title-custom" id="createRoleModalLabel">Add New Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body modal-body-custom">
                    @if (!ViewData.ModelState.IsValid && Model.ShowCreateModal)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fa-solid fa-exclamation-circle me-2"></i>
                            <strong>Please fix the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="form-group-custom">
                        <label asp-for="Input.Name" class="form-label-custom">Role Name</label>
                        <input asp-for="Input.Name" class="form-input-custom" placeholder="Enter role name" />
                        <span asp-validation-for="Input.Name" class="validation-error-custom"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Input.Description" class="form-label-custom">Description</label>
                        <textarea asp-for="Input.Description" class="form-input-custom" rows="3" 
                                  placeholder="Describe the role's purpose and permissions"></textarea>
                        <span asp-validation-for="Input.Description" class="validation-error-custom"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Input.Status" class="form-label-custom">Status</label>
                        <select asp-for="Input.Status" class="form-select-custom">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <span asp-validation-for="Input.Status" class="validation-error-custom"></span>
                    </div>
                </div>
                <div class="modal-footer modal-footer-custom">
                    <button type="button" class="btn-cancel-neutral" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn-primary-custom">
                        Create Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>