@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YardOps</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        :root {
            --primary: #214263;
            --accent: #2da49d;
        }
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .confirm-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            padding: 48px;
            max-width: 480px;
            width: 100%;
            text-align: center;
        }
        .confirm-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            font-size: 2rem;
        }
        .confirm-icon.success {
            background: #d1fae5;
            color: #059669;
        }
        .confirm-icon.error {
            background: #fee2e2;
            color: #dc2626;
        }
        .confirm-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 12px;
        }
        .confirm-message {
            color: #64748b;
            margin-bottom: 32px;
            line-height: 1.6;
        }
        .btn-login {
            background: var(--primary);
            color: white;
            padding: 12px 32px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s;
        }
        .btn-login:hover {
            background: #1a3550;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(33,66,99,0.3);
        }
        .password-note {
            margin-top: 24px;
            padding: 16px;
            background: #f8fafc;
            border-radius: 8px;
            font-size: 0.875rem;
            color: #475569;
        }
        .password-note code {
            background: #e2e8f0;
            padding: 2px 8px;
            border-radius: 4px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="confirm-card">
        @if (Model.IsSuccess)
        {
            <div class="confirm-icon success">
                <i class="fa-solid fa-check"></i>
            </div>
            <h1 class="confirm-title">Email Confirmed!</h1>
            <p class="confirm-message">
                Your email has been successfully verified and your account is now active.
                You can now log in to YardOps.
            </p>
            <a href="/Identity/Account/Login" class="btn-login">
                <i class="fa-solid fa-right-to-bracket"></i>
                Go to Login
            </a>
            <div class="password-note">
                <strong>Your temporary password:</strong> <code>@Model.DefaultPassword</code><br>
                <small>Please change your password after logging in.</small>
            </div>
        }
        else
        {
            <div class="confirm-icon error">
                <i class="fa-solid fa-xmark"></i>
            </div>
            <h1 class="confirm-title">Confirmation Failed</h1>
            <p class="confirm-message">
                @Model.ErrorMessage
            </p>
            <a href="/Identity/Account/Login" class="btn-login">
                <i class="fa-solid fa-arrow-left"></i>
                Back to Login
            </a>
        }
    </div>
</body>
</html>
