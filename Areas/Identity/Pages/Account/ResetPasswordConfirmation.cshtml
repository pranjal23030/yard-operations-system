@page
@model YardOps.Areas.Identity.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YardOps</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-main-content">
            <div class="login-content-wrapper">
                <div class="login-header">
                    <div class="logo-icon-container">
                        <img src="~/images/yardops-logo.png" alt="YardOps Logo" class="logo-icon" />
                    </div>
                    <h1 class="login-brand-title">YardOps</h1>
                    <p class="login-brand-subtitle">Yard Operations System</p>
                </div>

                <div class="login-card">
                    <div class="confirmation-icon success">
                        <i class="fa-solid fa-circle-check"></i>
                    </div>
                    <div class="login-card-header">
                        <h2 class="login-card-title">Password Reset Complete</h2>
                        <p class="login-card-subtitle">Your password has been successfully changed</p>
                    </div>

                    <div class="confirmation-message">
                        <p>
                            You can now sign in with your new password.
                        </p>
                    </div>

                    <a asp-page="./Login" class="btn btn-signin">
                        <i class="fa-solid fa-arrow-right me-2"></i>Continue to Sign In
                    </a>
                </div>
            </div>
        </div>

        <div class="login-footer">
            <p>© @DateTime.Now.Year All rights reserved</p>
        </div>
    </div>
</body>
</html>
