@page
@using YardOps.Areas.Identity.Pages.Account
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YardOps</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-main-content">
            <div class="login-content-wrapper">
                <div class="login-header">
                    <div class="logo-icon-container">
                        <img src="~/images/yardops-logo.png" alt="YardOps Logo" class="logo-icon" />
                    </div>
                    <h1 class="login-brand-title">YardOps</h1>
                    <p class="login-brand-subtitle">Yard Operations System</p>
                </div>

                <div class="login-card">
                    <div class="login-card-header">
                        <h2 class="login-card-title">Reset Password</h2>
                        <p class="login-card-subtitle">Enter your email to receive reset instructions</p>
                    </div>

                    <form method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="form-field-group">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <div class="input-wrapper">
                                <i class="fa-solid fa-envelope input-icon"></i>
                                <input asp-for="Input.Email" type="email" class="form-control" 
                                       placeholder="operator@company.com" required autocomplete="email" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger validation-error"></span>
                        </div>

                        <button type="submit" class="btn btn-signin">
                            <span>Send Reset Link</span>
                        </button>
                    </form>

                    <div class="login-divider">
                        <span>OR</span>
                    </div>

                    <div class="text-center">
                        <a asp-page="./Login" class="back-to-login-link">
                            <i class="fa-solid fa-arrow-left me-2"></i>Back to Sign In
                        </a>
                    </div>
                </div>

                <p class="login-help-text">
                    <i class="fa-solid fa-circle-info me-1"></i>
                    If you don't receive an email, check your spam folder or contact your administrator
                </p>
            </div>
        </div>

        <div class="login-footer">
            <p>© @DateTime.Now.Year All rights reserved</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
